<% if logged_in? %>
  <%= form_for @pinning, method: "post" do |f| %>
      Repin to one of your boards?
      <%= f.collection_select(:board_id, current_user.boards, :id, :name, {}, {class: "form-control"}) %>
      <%= f.hidden_field :pin_id, value: @pin.id %>
    <%= f.button :submit, class: "btn btn-default pinterest-theme-button" do %>
      <i class="fa fa-diamon"></i>
      Repin!
    <% end %>
  <% end %>
  <% else %>
    <%= link_to "Log in to repin!", login_path %>
<% end %>