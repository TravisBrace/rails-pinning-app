<h1>Login</h1>

<div class="form-container">

  <%= form_tag sessions_path do %>
    <div class="margin-container">
      <div class="group">
        <%= text_field_tag :email, params[:email], required: true %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= label_tag :email %><br>
      </div>
      <div class="group">
        <%= password_field_tag :password, value = nil, required: true %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= label_tag :password %>
      </div>
      <p class="button"><%= submit_tag %></p>
    </div>
  <% end %>